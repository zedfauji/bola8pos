{
  "name": "backend",
  "version": "0.1.0",
  "main": "src/server.js",
  "type": "commonjs",
  "scripts": {
    "predev": "node -e \"(async()=>{try{await require('kill-port')(3001);}catch(e){} process.exit(0)})()\"",
    "dev": "cross-env NODE_ENV=development PORT=3001 node src/server.js",
    "dev:https": "cross-env NODE_ENV=development HTTPS=true PORT=3001 node src/server.js",
    "prestart": "node -e \"(async()=>{try{await require('kill-port')(3001);}catch(e){} process.exit(0)})()\"",
    "start": "cross-env NODE_ENV=production PORT=3001 node src/server.js",
    "start:https": "cross-env NODE_ENV=production HTTPS=true PORT=3001 node src/server.js",
    "migrate": "node scripts/run-migrations.js",
    "migrate:create": "node scripts/create-migration.js",
    "generate-cert": "node scripts/generate-cert.js",
    "test": "cross-env NODE_ENV=test jest --detectOpenHandles --forceExit",
    "test:watch": "npm test -- --watch",
    "test:coverage": "npm test -- --coverage",
    "seed:minimal": "node scripts/seed-minimal-tables.js"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!**/node_modules/**",
      "!**/__tests__/**",
      "!**/migrations/**",
      "!**/scripts/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "dependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.6",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^9.0.7",
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.19.2",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "mysql2": "^3.14.3",
    "sequelize": "^6.37.7",
    "socket.io": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "typescript": "^5.3.3",
    "uuid": "^9.0.1",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.3",
    "cross-env": "^7.0.3",
    "jest": "^30.0.5",
    "kill-port": "^2.0.1",
    "supertest": "^7.1.4"
  }
}
